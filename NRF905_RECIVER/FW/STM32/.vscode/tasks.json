{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "-j9"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "problemMatcher": []
        },
        {
        "label": "Load Firmware",
        "type": "shell",
        "command": "/usr/local/bin/st-flash write ./build/FW.bin 0x08000000",
        "options": {
        "cwd": "${workspaceRoot}"
        },
        "problemMatcher": []
    }
]
}

    